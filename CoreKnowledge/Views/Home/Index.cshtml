<div class="form-group row">
    <label class="col-sm-2 col-form-label" id="lblSearch">Search</label>
    <div class="col-sm-10">
        <input class="form-control" id="term" name="term" placeholder="Seacrh" />
    </div>

    <div class="form-group row col-sm-12">
        <h2 id="Provider"></h2>
        <div id="Result"  class="h5">

        </div>
    </div>
</div>
<div class="form-group row">
    <button type="submit" class="btn btn-info" id="btn" name="btn">Search</button>
</div>
@section Scripts
    {
    <script>
        $(document).ready(function () {
            $("#btn").click(function () {
                $.get("/Home/SearchAble", { term: $("#term").val() }, function (data) {
                    $("#Provider").html("Provider :  " + data.provider);
                    $("#Result").html(data.resultText);
                });
            });
        });
    </script>
}
